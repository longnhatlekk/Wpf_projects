<UserControl x:Class="WPF_MachineService.Scanning"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_MachineService"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Gray" Width="300" Height="100">
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Padding="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="280">
                <TextBlock Text="Loading..." FontSize="20" FontWeight="Bold" />
                <ProgressBar IsIndeterminate="True" Height="20"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
